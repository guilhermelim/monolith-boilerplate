{
  // Format
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },

  // Explorer
  "explorer.fileNesting.patterns": {
    "package.json": "package-lock*, yarn.lock, tsconfig*, .nvmrc*, .swcrc",
    "eslint*": ".prettierrc, .editorconfig",
    ".prettierrc": ".prettierignore",
    "*.ts": "$(capture).spec.ts, $(capture).test.ts, $(capture).unit.spec.ts, $(capture).unit.test.ts, $(capture).integration.spec.ts, $(capture).integration.test.ts",
    "*.js": "$(capture).spec.js, $(capture).test.js, $(capture).unit.spec.js, $(capture).unit.test.js, $(capture).integration.spec.js, $(capture).integration.test.js",
    "README.md": "LICENSE"
  },

  // Test
  "jestrunner.jestCommand": "npm test"
}
